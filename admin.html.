  <script>
    let configuracion = {
      numeroTarjeta: '9227-9598-7147-8801',
      actualizadoEl: '2024-02-20'
    };

    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('tarjetaActual').value = configuracion.numeroTarjeta;
    });

    function actualizarTarjeta() {
      const nuevaTarjeta = document.getElementById('nuevaTarjeta').value;
      const mensaje = document.getElementById('mensajeActualizacion');
      
      if(/^\d{4}-\d{4}-\d{4}-\d{4}$/.test(nuevaTarjeta)) {
        configuracion.numeroTarjeta = nuevaTarjeta;
        configuracion.actualizadoEl = new Date().toLocaleDateString('es-MX'); <!-- Formato regional -->
        
        // Resto del código sin cambios
      }
    }
  </script>
