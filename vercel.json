{
  "version": 2,
  "routes": [
    // Rutas estáticas
    {
      "src": "/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    
    // Rutas de páginas principales
    {
      "src": "/taxis-urbanos/solicitar-taxi",
      "dest": "/taxis-urbanos/solicitar-taxi.html"
    },
    {
      "src": "/servicios-eventuales/registro",
      "dest": "/servicios-eventuales/registro.html"
    },
    // ... otras rutas
    
    // Catch-all para SPA
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
