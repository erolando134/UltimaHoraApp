{
  "version": 2,
  "builds": [
    {
      "src": "/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1. Archivos críticos (máxima prioridad)
    {
      "src": "/sw.js",
      "dest": "/sw.js",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },

    // 2. Assets estáticos (caché prolongada)
    {
      "src": "/img/(.*)",
      "dest": "/img/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },

    // 3. Páginas principales (HTML sin extensión)
    {
      "src": "/taxis-urbanos/solicitar-taxi",
      "dest": "/taxis-urbanos/solicitar-taxi.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/interprovincial/reservar-viaje",
      "dest": "/interprovincial/reservar-viaje.html"
    },
    {
      "src": "/carga/solicitar-servicio",
      "dest": "/carga/solicitar-servicio.html"
    },
    {
      "src": "/servicios-eventuales/inscripcion-eventual",
      "dest": "/servicios-eventuales/inscripcion-eventual.html"
    },
    {
      "src": "/tienda/tienda",
      "dest": "/tienda/tienda.html"
    },
    {
      "src": "/mensajeria/solicitar",
      "dest": "/mensajeria/solicitar.html"
    },
    {
      "src": "/excursiones/excursiones",
      "dest": "/excursiones/excursiones.html"
    },
    {
      "src": "/seguridad/seguridad",
      "dest": "/seguridad/seguridad.html"
    },
    {
      "src": "/admin/admin",
      "dest": "/admin/admin.html"
    },

    // 4. Páginas especiales
    {
      "src": "/offline",
      "dest": "/offline.html"
    },
    {
      "src": "/service-worker.js",
      "dest": "/sw.js",
      "status": 301
    },

    // 5. Redirecciones inteligentes
    {
      "src": "/taxis-urbanos/solicitar-taxi.html",
      "dest": "/taxis-urbanos/solicitar-taxi",
      "status": 301
    },
    {
      "src": "/servicios-eventuales/inscripcion-eventual.html",
      "dest": "/servicios-eventuales/inscripcion-eventual",
      "status": 301
    },

    // 6. Catch-all para SPA (última prioridad)
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
