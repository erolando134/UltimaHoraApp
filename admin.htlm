<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Administrador - Última Hora</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #1a237e;
      color: white;
      padding: 1rem;
      text-align: center;
    }

    .contenedor {
      max-width: 850px;
      margin: 2rem auto;
      padding: 2rem;
      background: white;
      border-radius: 10px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin-top: 1rem;
    }

    input[type="password"] {
      width: 100%;
      padding: 0.8rem;
      margin-top: 1rem;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    button {
      display: block;
      width: 100%;
      margin: 1rem 0;
      padding: 1rem;
      background-color: #3949ab;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
    }

    button:hover {
      background-color: #283593;
    }

    .seccion {
      display: none;
    }

    .enlace-externo {
      display: inline-block;
      margin-top: 1rem;
      color: #1565c0;
      text-decoration: underline;
    }

    .alerta {
      margin-top: 1rem;
      color: green;
    }
  </style>
</head>
<body>

<header>
  <h1>Panel del Administrador - Última Hora</h1>
</header>

<div class="contenedor">
  <h2>Acceso restringido</h2>
  <input type="password" id="claveAdmin" placeholder="Ingrese su contraseña" />
  <button onclick="verificarClave()">Entrar</button>

  <div class="seccion" id="panelAdmin">
    <h2>Herramientas del Administrador</h2>

    <button onclick="abrirVista('vista-cliente.html')">Ver como cliente</button>
    <button onclick="abrirVista('vista-chofer.html')">Ver como chófer</button>
    <button onclick="crearAvisoMantenimiento()">Crear aviso de mantenimiento</button>
    <button onclick="enviarActualizacion()">Montar actualización</button>

    <h3>Gestión técnica y ajustes con IA</h3>
    <a class="enlace-externo" href="https://chat.openai.com/" target="_blank">
      Acceder al soporte con IA
    </a>

    <h3>Control delegado</h3>
    <p>Este panel puede compartirse con empleados para operaciones generales. No muestra información sensible.</p>

    <div class="alerta" id="mensajeEstado"></div>
  </div>
</div>

<script>
  const CONTRASEÑA_ADMIN = "admin123"; // Reemplaza con tu clave segura

  function verificarClave() {
    const clave = document.getElementById("claveAdmin").value;
    const panel = document.getElementById("panelAdmin");
    const estado = document.getElementById("mensajeEstado");

    if (clave === CONTRASEÑA_ADMIN) {
      panel.style.display = "block";
      estado.innerText = "Acceso concedido.";
    } else {
      alert("Contraseña incorrecta.");
    }
  }

  function abrirVista(ruta) {
    window.open(ruta, "_blank");
  }

  function crearAvisoMantenimiento() {
    const hora = prompt("¿A qué hora será el mantenimiento?");
    if (hora) {
      alert(`Mantenimiento programado para las ${hora}. Los usuarios serán notificados.`);
      // Aquí iría lógica de backend para notificar a clientes y chóferes
    }
  }

  function enviarActualizacion() {
    alert("Actualización cargada correctamente.");
    // Aquí se conectaría con el sistema de despliegue o backend real
  }
</script>

</body>
</html>
